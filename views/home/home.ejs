<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="pushsdk" content="19a8505ceb708b3ec598d3d65c6300ba">
    <title>Korean Drama Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css"
        integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <%- include('./partials/style.ejs'); %>
        <%- include('../Global/nav-style.ejs'); %>
</head>

<body>
    <%- include('../Global/navhtml.ejs'); %>

        <div class="most">
            <div class="header">
                <span class="title">Most Downloaded Drama</span>
                <span id="date" class="date">

                </span>
            </div>
            <ul class="list-group">
                <% popular.forEach(drama => { %>
                 <li onclick="window.open('/<%= drama.id %>', '_self')" class="list-group-item d-flex justify-content-between align-items-center">
                    <%= drama.newDramaName %> 
                    <span class="badge bg-primary rounded-pill"><i class="fa-solid fa-download"></i> <%= drama.timesLoaded %> </span>
                </li>
                <% }) %>
            </ul>
        </div>

        <div class="latest">
                <span class="title">Latest Drama</span>
                <div class="drama-cont">
                  <div class="drama">
                      <% latest.forEach(drama => { %>
                       <div class="img" onclick="window.open('<%= drama.idToHome %>', '_self')">
                        <img src="<%= drama.imageUrl %> " alt="<%= drama.dramaName %> ">
                        <h3><%= drama.dramaName %> </h3>
                    </div>
                      <% }) %>
                </div>
                <div class="btn">
                    <button onclick="window.open('/list-of-dramastore-dramas', '_self')">LOAD MORE &nbsp; <i class="fa-solid fa-circle-chevron-down"></i></button>
                </div>  
                </div>
                
        </div>
        <br> <br> <br>
        <footer>
            <span>
                Korean Drama Store
            </span>
            <span class="a" onclick="window.open('tg://join?invite=mTx_t-6TBx9hNTc8', '_self')">
                <i class="fa-brands fa-telegram"></i> Join Us Telegram
            </span>
            <span id="dated">
            </span>
        </footer>

        <%- include('./partials/script.ejs'); %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                crossorigin="anonymous"></script>

                <!-- vignette propellar -->
            <script>
                (function (d, z, s) { s.src = '//' + d + '/401/' + z; try { (document.body || document.documentElement).appendChild(s) } catch (e) { } })('eehuzaih.com', 4963015, document.createElement('script'))
            </script>
</body>

</html>