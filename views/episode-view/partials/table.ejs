<table class="table table-striped-columns caption-top">
    <caption>
      <span class="cap">Top &nbsp; 500 &nbsp; dramastore &nbsp; <b>Koreaboo üòç</b></span>
      <span class="desc">Koreaboo = <i>someone who is obsessed with K-dramas or k-pop.</i></span>
    </caption>
    <thead style="font-size: 14px;">
      <tr>
        <th scope="col" class="centerall">#</th>
        <th scope="col">Name</th>
        <th scope="col">Points</th>
        <th scope="col">Downloads</th>
        <th scope="col">Last activity</th>
      </tr>
    </thead>
    <tbody style="font-size: 12px;">
      <% ranks.forEach((user, index)=> { %>
      <tr>
        <th scope="row" class="centerall">
          <% if (user.fname=='@shemdoe' ) { %>
          <span class="admin">Admin</span>
          <% } else { %>
          <%= index + 1 %>
          <% } %>
        </th>
        <td>
          <% if (user.fname.startsWith('@') ) { %>
          <a href="https://t.me/<%= user.fname.replace('@', '') %>" target="_blank">
            <%= user.fname.substring(0,15) %>
            <i class="fa-brands fa-telegram"></i>
          </a>
          <% } else { %>
          <%= user.fname.substring(0, 16) %>
          <% } %>
        </td>
        <td class="centerall">
          <%= user.points.toLocaleString('en-US') %>
        </td>
        <td class="centerall">
          <%= user.downloaded.toLocaleString('en-US') %>
        </td>
        <td>
          <%= user.updatedAt %>
        </td>
        <% }) %>
      </tr>
    </tbody>
  </table>