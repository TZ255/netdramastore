<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Vignette Ads -->
    <%- include('../Global/ads/vignette.ejs'); %>
    <!-- Google Tag -->
    <%- include('../Global/google.ejs'); %>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex,nofollow,noarchive" />
    <title>New Uploaded Episodes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css"
        integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <%- include('./partials/style.ejs'); %>
    <%- include('../Global/nav-style.ejs'); %>
    <%- include('../Global/ads/style.ejs'); %>
</head>

<body>
    <%- include('../Global/navhtml.ejs'); %>
    <div class="ads">
        <%- include('../Global/ads/300x250.ejs'); %>
    </div>
    <br>
    <div id="d2024" class="most d2024">
        <div class="header">
            <span class="title">New Uploaded Episodes - Telegram</span>
        </div>
    </div>
    <div class="alls">
        <ul class="list-group">
            <% episodes.forEach(ep=> { %>
            <li class="list-group-item epi-list">
                <span class="b-sp date">
                    <%= new Date(ep.updatedAt).toLocaleString() %>
                </span>
                <span class="b-sp title">
                    Episode <%= String(ep.epno).padStart(2, '0') %> - <%= ep.drama_name %>
                </span>
                <div class="downloads">
                    <button class="b-sp" onclick="window.open('/download/episode/option2/<%= ep._id %>/shemdoe')">
                        Download This Episode
                    </button>
                    <button class="b-sp" onclick="window.open('/op/drama/<%= ep.drama_chan_id %>')">
                        Download Full Drama
                    </button>
                </div>
            </li>
            <% }) %>
        </ul>
        <div class="pagi">
            <% if (Number(page.prev) >= 0) { %>
             <button onclick="window.open('/new/episodes/<%= page.prev %>', '_self')">Prev</button>
            <% } %>
            <button onclick="window.open('/new/episodes/<%= page.next %>', '_self')">Next</button>
        </div>
    </div>

    <footer>
        <span>
            Korean Drama Store
        </span>
        <span class="a" onclick="window.open('tg://join?invite=mTx_t-6TBx9hNTc8', '_self')">
            <i class="fa-brands fa-telegram"></i> Join Us Telegram
        </span>
        <span id="dated">
        </span>
    </footer>


    <%- include('./partials/script.ejs'); %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>

</html>