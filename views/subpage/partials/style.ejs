<style>
    @import url('https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Acme&family=Caveat&family=Hurricane&family=Palette+Mosaic&family=Smokum&display=swap');


    body {
        max-width: 480px;
        min-width: 320px;
        margin: 0 auto;
        background-color: aliceblue;
    }

    .dramaCont {
        width: 95%;
        margin: 16px auto;
        background-color: black;
        color: white;
        outline: none;
        border: 2px lightgray solid;
    }

    .dramaCont .title {
        display: block;
        font-weight: bold;
        font-size: 24px;
        font-family: 'Acme', cursive;
        text-align: center;
        padding: 12px;
    }

    .dramaCont .pic-and-desc {
        display: flex;
        height: 250px;
        overflow: scroll;
    }

    .dramaCont .pic-and-desc .img {
        width: 45%;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .dramaCont .pic-and-desc .img img {
        max-width: 95%;
        height: auto;
        max-height: 220px;
    }

    .dramaCont .pic-and-desc .maelezo {
        width: 45%;
        height: fit-content;
        padding: 12px 0;
        font-size: small;
    }

    .synopsis {
        background-color: black;
        color: white;
        padding: 12px 6px;
        width: 95%;
        margin: 12px auto;
    }

    .synopsis span {
        font-size: large;
        font-weight: bold;
        display: block;
        font-family: 'Acme', cursive;
    }

    .telegram {
        background-color: #f5f5f5;
        color: black;
        padding: 32px 8px;
        margin: 12px auto;
        width: 95%;
        border: 2px dodgerblue solid;
        border-left: 4px dodgerblue solid;
        border-right: 4px dodgerblue solid;
        border-top: 1px lightgray solid;
        border-bottom: 1px lightgray solid;
        border-radius: 48px;
    }

    .telegram span {
        display: block;
    }

    .telegram .title {
        font-family: 'Acme', sans-serif;
        font-weight: bold;
        text-align: center;
        font-size: large;
    }

    .telegram .title i {
        color: dodgerblue;
    }

    .telegram .dp {
        width: 250px;
        height: 250px;
        border-radius: 50%;
        border: black solid 1px;
        background-image: url('<%= drama.coverUrl %>');
        background-size: cover;
        background-repeat: no-repeat;
        margin: 8px auto;
        padding: 4px;
        background-color: black;
    }

    .telegram .official {
        text-align: center;
        font-weight: bold;
    }

    .telegram .btn {
        text-align: center;
        margin: auto;
    }

    .telegram .btn button {
        width: 85%;
        background-color: green;
        border: none;
        color: white;
        border-radius: 48px;
        padding: 16px 4px;
        font-weight: bold;
        font-family: 'Acme', sans-serif;
    }

    .telegram .btn sub {
        font-size: xx-small;
        font-style: italic;
        color: black;
        display: block;
        margin-top: 16px;
    }

    .most {
        margin: 16px auto;
        background-color: black;
        color: white;
        padding: 4px;
        width: 95%;
        border-top-left-radius: 12px;
        border-top-right-radius: 12px;
    }

    .most .header {
        margin: 4px auto;
        padding: 4px;
        font-weight: bold;
        font-family: 'Acme', cursive;
    }

    .most .title {
        font-size: large;
        text-transform: uppercase;
    }

    .most span {
        display: block;
    }

    .most .list-group {
        height: 360px;
        overflow: scroll;
        font-weight: bold;
    }

    .most .list-group li {
        color: gray;
    }

    .most .list-group li:hover,
    .most .list-group li:active {
        color: brown;
        cursor: pointer;
    }

    footer {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: lightgray;
        color: gray;
        font-family: 'Acme', sans-serif;
        padding: 16px 4px;
    }

    footer span {
        margin-top: 12px;
        font-weight: bold;
    }

    footer .a {
        text-decoration: underline;
        color: gray;
        cursor: pointer;
    }

    .ads {
        width: 95%;
        margin: 8px auto;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: whitesmoke;
        border: lightgray solid 1px;
        height: fit-content;
        padding: 5px;
    }

    .ads #M797576ScriptRootC1337586 {
        min-height: 300px;
    }

    .ads .long-under-article,
    .ads .in-articles {
        background-color: black;
    }
</style>